# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database Configuration
DATABASE_URL=postgresql://postgres:[password]@[host]:[port]/[database]

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# File Upload Configuration
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=kuchisabishii-uploads
NEXT_PUBLIC_MAX_FILE_SIZE=5242880 # 5MB in bytes

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
API_RATE_LIMIT_PER_MINUTE=100

# External Services
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user_here
SMTP_PASSWORD=your_smtp_password_here
FROM_EMAIL=noreply@kuchisabishii.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_google_analytics_id_here

# Feature Flags
NEXT_PUBLIC_ENABLE_SOCIAL_FEATURES=true
NEXT_PUBLIC_ENABLE_RECOMMENDATIONS=true
NEXT_PUBLIC_ENABLE_REAL_TIME=true

# Development
NODE_ENV=development
NEXT_PUBLIC_DEBUG=false
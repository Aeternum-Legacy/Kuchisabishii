{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/src/*"]
    }
  },
  "include": [],
  "exclude": [
    "node_modules",
    "dist",
    "**/node_modules",
    "**/dist"
  ],
  "references": [
    { "path": "./web" },
    { "path": "./shared" }
  ]
}
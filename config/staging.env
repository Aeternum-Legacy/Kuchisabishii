# Kuchisabishii Staging Environment Configuration

# Application
NODE_ENV=staging
APP_NAME=Kuchisabishii-Staging
APP_VERSION=1.0.0-staging
APP_URL=https://staging.kuchisabishii.com

# Security (Use different secrets for staging)
SESSION_SECRET=your-staging-session-secret-here
JWT_SECRET=your-staging-jwt-secret-here
ENCRYPTION_KEY=your-staging-encryption-key-here

# Supabase Configuration
SUPABASE_URL=https://your-staging-project.supabase.co
SUPABASE_ANON_KEY=your-staging-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key

# Database
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.your-staging-project.supabase.co:5432/postgres

# Storage & CDN
STORAGE_BUCKET=kuchisabishii-staging
CDN_URL=https://staging-cdn.kuchisabishii.com
MAX_FILE_SIZE=10485760

# Email Configuration (Use test email service)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-user
SMTP_PASSWORD=your-mailtrap-password
FROM_EMAIL=test@staging.kuchisabishii.com
SUPPORT_EMAIL=support@staging.kuchisabishii.com

# External Services (Use sandbox/test keys)
GOOGLE_MAPS_API_KEY=your-test-google-maps-api-key
GOOGLE_PLACES_API_KEY=your-test-google-places-api-key

# OAuth (Removed - Email-only authentication)
# GOOGLE_CLIENT_ID=your-staging-google-oauth-client-id
# GOOGLE_CLIENT_SECRET=your-staging-google-oauth-client-secret
# APPLE_CLIENT_ID=your-staging-apple-oauth-client-id
# APPLE_CLIENT_SECRET=your-staging-apple-oauth-client-secret

# Analytics & Monitoring (Separate projects)
MIXPANEL_TOKEN=your-staging-mixpanel-token
SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project
DATADOG_API_KEY=your-staging-datadog-api-key

# Performance
REDIS_URL=redis://your-staging-redis-instance:6379
CACHE_TTL=1800
RATE_LIMIT_MAX=500
RATE_LIMIT_WINDOW=900000

# Feature Flags (Enable experimental features)
ENABLE_SOCIAL_FEATURES=true
ENABLE_ADVANCED_RECOMMENDATIONS=true
ENABLE_EMOTIONAL_INSIGHTS=true
ENABLE_RESTAURANT_DISCOVERY=true
ENABLE_DEBUG_MODE=true
ENABLE_MOCK_DATA=true

# Mobile Configuration
EXPO_PROJECT_ID=your-staging-expo-project-id
PUSH_NOTIFICATION_KEY=your-staging-push-notification-key

# Web Configuration
NEXT_PUBLIC_APP_URL=https://staging.kuchisabishii.com
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-anon-key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-test-google-maps-api-key

# Security Headers (More relaxed for testing)
CSP_DIRECTIVES="default-src 'self' 'unsafe-inline' 'unsafe-eval'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://maps.googleapis.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https:; connect-src 'self' https://your-staging-project.supabase.co wss://your-staging-project.supabase.co;"
HSTS_MAX_AGE=0

# Logging (More verbose for debugging)
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Testing
ENABLE_TEST_ENDPOINTS=true
MOCK_EXTERNAL_APIS=true
SKIP_EMAIL_VERIFICATION=true
ALLOW_CORS_ALL_ORIGINS=true

# Backup & Recovery
BACKUP_RETENTION_DAYS=7
AUTO_BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 6 * * *"

# Compliance (Relaxed for testing)
GDPR_ENABLED=false
CCPA_ENABLED=false
DATA_RETENTION_DAYS=30
COOKIE_CONSENT_REQUIRED=false
{
  "name": "kuchisabishii",
  "version": "1.0.0",
  "description": "Cross-platform food journaling app for emotional food experiences",
  "private": true,
  "workspaces": [
    "mobile",
    "web", 
    "shared",
    "supabase"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:mobile": "cd mobile && npm run start",
    "dev:web": "cd web && npm run dev",
    "dev:shared": "cd shared && npm run dev",
    "build": "npm-run-all build:*",
    "build:shared": "cd shared && npm run build",
    "build:web": "cd web && npm run build",
    "build:mobile": "cd mobile && npm run web",
    "test": "npm-run-all test:*",
    "test:shared": "cd shared && npm run test",
    "test:web": "cd web && npm run test",
    "test:mobile": "cd mobile && npm run test",
    "lint": "npm-run-all lint:*",
    "lint:shared": "cd shared && npm run lint",
    "lint:web": "cd web && npm run lint",
    "lint:mobile": "cd mobile && npm run lint",
    "type-check": "npm-run-all type-check:*",
    "type-check:shared": "cd shared && npm run type-check",
    "type-check:web": "cd web && npm run type-check",
    "type-check:mobile": "cd mobile && npm run type-check",
    "clean": "rm -rf node_modules */node_modules */dist */.next */.expo",
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  },
  "keywords": ["kuchisabishii", "food", "emotion", "mobile", "web", "cross-platform"],
  "author": "Kuchisabishii Team",
  "license": "MIT"
}
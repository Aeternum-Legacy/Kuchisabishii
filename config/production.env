# Kuchisabishii Production Environment Configuration

# Application
NODE_ENV=production
APP_NAME=Kuchisabishii
APP_VERSION=1.0.0
APP_URL=https://kuchisabishii.com

# Security
SESSION_SECRET=your-production-session-secret-here
JWT_SECRET=your-production-jwt-secret-here
ENCRYPTION_KEY=your-production-encryption-key-here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# Database
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.your-project.supabase.co:5432/postgres

# Storage & CDN
STORAGE_BUCKET=kuchisabishii-production
CDN_URL=https://cdn.kuchisabishii.com
MAX_FILE_SIZE=10485760

# Email Configuration  
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
FROM_EMAIL=noreply@kuchisabishii.com
SUPPORT_EMAIL=support@kuchisabishii.com

# External Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# OAuth (Removed - Email-only authentication)
# GOOGLE_CLIENT_ID=your-google-oauth-client-id
# GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
# APPLE_CLIENT_ID=your-apple-oauth-client-id
# APPLE_CLIENT_SECRET=your-apple-oauth-client-secret

# Analytics & Monitoring
MIXPANEL_TOKEN=your-mixpanel-token
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
DATADOG_API_KEY=your-datadog-api-key

# Performance
REDIS_URL=redis://your-redis-instance:6379
CACHE_TTL=3600
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# Feature Flags
ENABLE_SOCIAL_FEATURES=true
ENABLE_ADVANCED_RECOMMENDATIONS=true
ENABLE_EMOTIONAL_INSIGHTS=true
ENABLE_RESTAURANT_DISCOVERY=true

# Mobile Configuration
EXPO_PROJECT_ID=your-expo-project-id
PUSH_NOTIFICATION_KEY=your-push-notification-key

# Web Configuration
NEXT_PUBLIC_APP_URL=https://kuchisabishii.com
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Security Headers
CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline' https://maps.googleapis.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https:; connect-src 'self' https://your-project.supabase.co wss://your-project.supabase.co;"
HSTS_MAX_AGE=31536000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Backup & Recovery
BACKUP_RETENTION_DAYS=90
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"

# Compliance
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_RETENTION_DAYS=2555
COOKIE_CONSENT_REQUIRED=true